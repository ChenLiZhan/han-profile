<!DOCTYPE html>
<html ng-app="myApp">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <base href="/">
  </head>
  <body ng-controller="AppCtrl">
    <div class="title">
      <a href="#" ng-click="aboutMode()">
        <%= title %>
      </a>
    </div>
    <div class="container">
      <nav>
          <span class="cat-title">PHOTO</span>
          <ul>
              <li ng-repeat="category in photosCategories"><a class="cat-sub-title" ng-href="#" ng-click="photosMode($index)">{{category}}</a></li>
          </ul>
          <span class="cat-title">VIDEO</span>
          <ul>
              <li ng-repeat="category in videosCategories"><a class="cat-sub-title" ng-href="#" ng-click="videosMode($index)">{{category}}</a></li>
          </ul>
          <span class="cat-title"><a href="#" ng-click="aboutMode()">About Me</a></span>

      </nav> 
      <div class="content">
        <div ui-view autoscroll="true"></div>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="/components/angular/angular.min.js"></script>
    <script src="/components/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="/components/ng-lodash/build/ng-lodash.min.js"></script>

    <script src="/components/jquery-bridget/jquery-bridget.js"></script>
    <script src="/components/ev-emitter/ev-emitter.js"></script>
    <script src="/components/desandro-matches-selector/matches-selector.js"></script>
    <script src="/components/fizzy-ui-utils/utils.js"></script>
    <script src="/components/get-size/get-size.js"></script>
    <script src="/components/outlayer/item.js"></script>
    <script src="/components/outlayer/outlayer.js"></script>
    <script src="/components/masonry/masonry.js"></script>

    <!-- optional -->
    <script src="/components/imagesloaded/imagesloaded.js"></script>
    <!-- /optional -->

    <script src="/components/angular/angular.js"></script>
    <script src="/components/angular-masonry/angular-masonry.js"></script>
    <!-- customize -->
    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/controller.js"></script>
    <script src="/javascripts/script.js"></script>
    <script src="/javascripts/filters.js"></script>
    <script src="/javascripts/directives.js"></script>
  </body>
</html>
